# .env.example - Variables de entorno para Histora Backend

# ===========================================
# BASE DE DATOS
# ===========================================
MONGO_URL=mongodb://localhost:27017/histora

# ===========================================
# SERVIDOR
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# JWT / AUTENTICACION
# ===========================================
JWT_SECRET=tu_clave_secreta_muy_segura_cambiar_en_produccion
JWT_EXPIRES_IN=7d

# ===========================================
# NOTIFICACIONES - EMAIL
# ===========================================
# Opciones: sendgrid, ses, smtp, console (desarrollo)
EMAIL_PROVIDER=console
SENDGRID_API_KEY=
# AWS SES
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
# SMTP
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ===========================================
# NOTIFICACIONES - SMS
# ===========================================
# Opciones: gamanet, twilio, sns, console (desarrollo)
SMS_PROVIDER=console

# Gamanet (Recomendado para Peru - https://gamanet.pe)
# Precio: S/ 0.09 por SMS, recarga minima S/ 50
# Solicitar credenciales en: https://gamanet.pe/api-sms/
GAMANET_API_KEY=
GAMANET_API_CARD=

# Twilio (Internacional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===========================================
# NOTIFICACIONES - WHATSAPP
# ===========================================
# Opciones: twilio, meta, console (desarrollo)
WHATSAPP_PROVIDER=console
# Meta Cloud API (para notificaciones)
WHATSAPP_PHONE_ID=
WHATSAPP_ACCESS_TOKEN=

# ===========================================
# WHATSAPP BUSINESS CHATBOT (NurseLite)
# ===========================================
# Meta WhatsApp Cloud API - obtener en developers.facebook.com
WA_PHONE_NUMBER_ID=
WA_ACCESS_TOKEN=
WA_VERIFY_TOKEN=tu_token_de_verificacion_webhook
WA_APP_SECRET=

# ===========================================
# ANTHROPIC (Claude AI para chatbot)
# ===========================================
ANTHROPIC_API_KEY=

# ===========================================
# NOTIFICACIONES - PUSH (FCM)
# ===========================================
# Opciones: fcm, console (desarrollo)
PUSH_PROVIDER=console
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ===========================================
# PAGOS - CULQI (Yape, tarjetas)
# ===========================================
CULQI_PUBLIC_KEY=
CULQI_SECRET_KEY=

# ===========================================
# CLOUDINARY (Fotos de perfil)
# ===========================================
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ===========================================
# RENIEC (Consulta de DNI - Per√∫)
# ===========================================
# Opciones de proveedor: decolecta, apis.net.pe, apidni.com, dniruc.com
RENIEC_API_PROVIDER=decolecta
# Token de API (obtener en https://decolecta.com - 100 consultas gratis/mes)
RENIEC_API_TOKEN=

# ===========================================
# URLs DE LA APLICACION
# ===========================================
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200

# ===========================================
# FEATURE FLAGS
# ===========================================
# Controlan funcionalidades que requieren servicios externos pagos

# SMS para verificacion de telefono
# - true: Envia SMS reales (requiere SMS_PROVIDER configurado)
# - false: Usa codigo de prueba "123456" (desarrollo/testing)
FEATURE_SMS_ENABLED=false
